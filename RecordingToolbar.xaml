<Window x:Class="CameraOverlay.RecordingToolbar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recording Controls"
        Width="200" Height="35"
        WindowStyle="None"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="#2D2D30"
        AllowsTransparency="True"
        WindowStartupLocation="Manual">
    
    <Window.Effect>
        <DropShadowEffect ShadowDepth="3" BlurRadius="10" Opacity="0.5"/>
    </Window.Effect>
    
    <Border BorderBrush="#3F3F46" BorderThickness="1" CornerRadius="3">
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Compact Recording Button -->
            <Button x:Name="RecordButton" 
                    Grid.Column="0"
                    Width="25" Height="25"
                    Content="âº"
                    Background="#DC3545"
                    Foreground="White"
                    BorderThickness="0"
                    FontWeight="Bold"
                    FontSize="12"
                    Click="RecordButton_Click"
                    ToolTip="Start/Stop Recording">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="12">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C82333"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#A71E2A"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            
            <!-- Compact Recording Status -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Margin="3,0,3,0">
                <TextBlock x:Name="StatusText" 
                           Text="Ready"
                           Foreground="White"
                           FontSize="10"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="DurationText" 
                           Text="00:00"
                           Foreground="#CCCCCC"
                           FontSize="10"
                           VerticalAlignment="Center"
                           Margin="3,0,0,0"/>
            </StackPanel>
            
        </Grid>
    </Border>
</Window>
